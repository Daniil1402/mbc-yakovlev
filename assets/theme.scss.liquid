@font-face {
  font-family: "Mulish";
  src: url(Mulish-Regular.eot) format("eot"), url(Mulish-Regular.woff) format("woff"), url(Mulish-Regular.ttf) format("truetype");
  font-weight: normal;
  font-style: normal;
}



input,
button,
form,
select,
textarea {
  border: none;
	&:focus,
	&:active {
		box-shadow: none;
		outline: none;
	}
}

.hover-opacity {
	transition: opacity 0.3s linear;
	&:hover {
		transition: opacity 0.3s linear;
		opacity: 0.6;
	}
}

.btn {
	display: inline-block;
	cursor: pointer;
	text-align: center;
	border: none;
	text-decoration: none;
	&:disabled {
		cursor: default;
		opacity: 0.6;
	}
}

header {
  padding: 25px 0;
  .grid-container {
    max-width: 1155px;
    // padding: 0 10px;
  }
  .open__menu {
    display: none;
    @media (max-width: 768px) {
      display: block;
    }
  }
  .logo {
    @media (max-width: 425px) {
      max-width: 170px;
      width: 100%;
    }
  }
  .links {
    nav {
      margin-right: 40px;
      @media (max-width: 998px) {
        margin-right: 30px;
      }
      @media (max-width: 768px) {
        display: none;
      }
      a {
        font-family: "Mulish", sans-serif;
        font-style: normal;
        font-weight: bold;
        font-size: 21px;
        line-height: 26px;
        text-align: center;
        color: #202020;
        text-decoration: none;
        @media (max-width: 998px) {
          font-size: 18px;
        }
        &:not(:last-child) {
          margin-right: 30px;
          @media (max-width: 998px) {
            margin-right: 20px;
          }
        }
      }
      .red-link {
        text-transform: uppercase;
        color: #CC0000;
      }
    }
    .btns {
      display: flex;
      a {
        display: block;
        width: 24px;
        height: 24px;
      }
      .search__btn {
        margin-right: 25px;
        text-decoration: none;
        @media (max-width: 998px) {
          margin-right: 20px;
        }
        @media (max-width: 768px) {
          display: none;
        }
      }
    }
  }
  .mobile__menu {
    padding: 20px;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100vh;
    background: #131824;
    z-index: 10;
    overflow: hidden;
    transform: translate(0);
    transition: transform .5s ease-in-out, visibility .5s linear;
		overflow-y: auto;
		visibility: visible;
    .close__menu {
      margin-bottom: 25px;
    }
    .search {
      position: relative;
      input {
        padding: 15px 0;
        width: 100%;
        font-family: "Mulish";
        font-style: normal;
        font-weight: bold;
        font-size: 16px;
        line-height: 20px;
        color: #FFFFFF;
        background: none;
        opacity: 0.33;
        border: none;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
      }
      button {
        height: 24px;
        width: 24px;
        position: absolute;
        top: 50%;
        right: 15px;
        transform: translate(0, -50%);
        cursor: pointer;
      }
    }
    nav {
      display: flex;
      flex-direction: column;
      a {
        padding: 15px 0;
        font-family: "Mulish";
        font-style: normal;
        font-weight: bold;
        font-size: 21px;
        line-height: 30px;
        color: #FFFFFF;
        text-decoration: none;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        text-align: left;
      }
      .red-link {
        text-transform: uppercase;
        color: #CC0000;
      }
    }
  }
  .hidden {
		visibility: hidden;	
		transform: translate(105%);
	}
}

