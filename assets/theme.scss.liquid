@font-face {
  font-family: "Mulish";
  src: url(Mulish-Regular.eot) format("eot"), url(Mulish-Regular.woff) format("woff"), url(Mulish-Regular.ttf) format("truetype");
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: "GoudyBookletter1911";
  src: url(GoudyBookletter1911-Regular.ttf) format("truetype");
  font-weight: normal;
  font-style: normal;
}



input,
button,
form,
select,
textarea {
  border: none;
	&:focus,
	&:active {
		box-shadow: none;
		outline: none;
	}
}

.hover-opacity {
	transition: opacity 0.3s linear;
	&:hover {
		transition: opacity 0.3s linear;
		opacity: 0.6;
	}
}

.btn {
	display: inline-block;
	cursor: pointer;
	text-align: center;
	border: none;
	text-decoration: none;
	&:disabled {
		cursor: default;
		opacity: 0.6;
	}
}

.grid-container {
  max-width: 1155px;
}

header {
  padding: 25px 0;
  .open__menu {
    display: none;
    @media (max-width: 768px) {
      display: block;
    }
  }
  .logo {
    @media (max-width: 425px) {
      max-width: 170px;
      width: 100%;
    }
  }
  .links {
    nav {
      margin-right: 40px;
      @media (max-width: 998px) {
        margin-right: 30px;
      }
      @media (max-width: 768px) {
        display: none;
      }
      a {
        font-family: "Mulish", sans-serif;
        font-style: normal;
        font-weight: bold;
        font-size: 21px;
        line-height: 26px;
        text-align: center;
        color: #202020;
        text-decoration: none;
        @media (max-width: 998px) {
          font-size: 18px;
        }
        &:not(:last-child) {
          margin-right: 30px;
          @media (max-width: 998px) {
            margin-right: 20px;
          }
        }
      }
      .red-link {
        text-transform: uppercase;
        color: #CC0000;
      }
    }
    .btns {
      display: flex;
      a {
        display: block;
        width: 24px;
        height: 24px;
      }
      .search__btn {
        margin-right: 25px;
        text-decoration: none;
        @media (max-width: 998px) {
          margin-right: 20px;
        }
        @media (max-width: 768px) {
          display: none;
        }
      }
    }
  }
  .mobile__menu {
    padding: 20px;
    position: fixed;
    top: 0;
    // left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100vh;
    background: #131824;
    z-index: 10;
    overflow: hidden;
    transform: translate(0);
    transition: transform .5s ease-in-out, visibility .5s linear, opacity .3s linear;
		overflow-y: auto;
		visibility: visible;
    .close__menu {
      margin-bottom: 25px;
    }
    .search {
      position: relative;
      input {
        padding: 15px 0;
        width: 100%;
        font-family: "Mulish";
        font-style: normal;
        font-weight: bold;
        font-size: 16px;
        line-height: 20px;
        color: #FFFFFF;
        background: none;
        opacity: 0.33;
        border: none;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
      }
      button {
        height: 24px;
        width: 24px;
        position: absolute;
        top: 50%;
        right: 15px;
        transform: translate(0, -50%);
        cursor: pointer;
      }
    }
    nav {
      display: flex;
      flex-direction: column;
      a {
        padding: 15px 0;
        font-family: "Mulish";
        font-style: normal;
        font-weight: bold;
        font-size: 21px;
        line-height: 30px;
        color: #FFFFFF;
        text-decoration: none;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        text-align: left;
      }
      .red-link {
        text-transform: uppercase;
        color: #CC0000;
      }
    }
  }
  .hidden {
    opacity: 0;
		visibility: hidden;	
		transform: translate(105%);
	}
}

section.product-section {
  padding-top: 10px;
  .grid-container {
    border-top: 1px solid rgba(32, 32, 32, 0.05);
    padding-top: 20px;
    @media (max-width: 639px) {
      padding: 0;
      border-top: none;
    }
  }
  .photo-block {
    @media (max-width: 639px) {
      margin-bottom: 15px;
    }
    #product-slider {
      margin-bottom: 15px;
      position: relative;
      @media (max-width: 639px) {
        width: 100%;
      }
      .slide {
        height: 0;
        overflow: hidden;
        padding-top: 79.5%;
        position: relative;
        // @media (max-width: 639px) {
        //   width: 100%;
        //   position: static;
        //   height: auto;
        //   padding-top: 0;
        // }
        @media (max-width: 639px) {
          padding-top: 90.5%;
        }
        img {
          object-fit: cover;
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          // @media (max-width: 639px) {
          //   position: static;
          //   height: auto;
          //   padding-top: 0;
          // }
        }
      }
      .owl-nav {
        .owl-prev, .owl-next {
          position: absolute;
          height: 100%;
          width: 50px;
          background: rgba(32, 32, 32, 0.15);
          box-shadow: inset 0px -2px 2px rgba(0, 0, 0, 0.13);
          transition: .3s linear;
          &:hover {
            background: rgba(32, 32, 32, 0.3);
          }
          span {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 15px;
            height: 15px;
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
          }
        }
        .owl-prev {
          top: 0;
          left: 0;
          span {
            background-image: url(https://cdn.shopify.com/s/files/1/0495/1405/3798/files/prev.svg?v=1630601007);
          }
        }
        .owl-next {
          top: 0;
          right: 0;
          span {
            background-image: url(https://cdn.shopify.com/s/files/1/0495/1405/3798/files/next.svg?v=1630601007);
          }
        }
      }
    }
    #product-slider-dots {
      display: flex;
      @media (max-width: 639px) {
        justify-content: center;
      }
      .owl-dot {
        width: 64px;
        height: 64px;
        cursor: pointer;
        border: 1px solid transparent;
        &:not(:last-child) {
          margin-right: 15px;
        }
        &.active {
          border-color: #000000;
        }
        img {
          object-fit: cover;
          width: 100%;
          height: 100%;
        }
      }
    }
  }
  
  .text {
    h2 {
      font-family: "GoudyBookletter1911";
      font-style: normal;
      font-weight: normal;
      font-size: 32px;
      line-height: 44px;
      color: #202020;
      margin: 0 0 40px;
      @media (max-width: 639px) {
        text-align: center;
      }
    }
    .option__block {
      @media (max-width: 639px) {
        padding: 20px 20px 35px;
        background: rgba(32, 32, 32, 0.05);
        margin-bottom: 20px;
      }
      .product__options {
        margin-bottom: 20px;
        .option {
          label {
            display: block;
            font-family: "Mulish";
            font-style: normal;
            font-weight: bold;
            font-size: 21px;
            line-height: 26px;
            color: #000000;
            margin-bottom: 10px;
          }
          .option-select {
            padding: 16px 12px;
            background: #FFFFFF;
            border: 1px solid #D8D8D8;
            box-shadow: inset 0px -2px 2px rgba(0, 0, 0, 0.13);
            border-radius: 4px;
            font-family: "Mulish";
            font-style: normal;
            font-weight: normal;
            font-size: 12px;
            line-height: 15px;
            text-transform: uppercase;
          }
        }
      }
      .price__block {
        display: flex;
        align-items: flex-start;
        margin-bottom: 35px;
        .price {
          font-family: "Mulish";
          font-style: normal;
          font-weight: bold;
          font-size: 36px;
          line-height: 45px;
          color: #CC0000;
          margin-right: 10px;
        }
        .tax {
          font-family: "Mulish";
          font-style: normal;
          font-weight: normal;
          font-size: 13px;
          line-height: 16px;
          color: #232231;
        }
      }
      .btns {
        button {
          padding: 15px 0;
          max-width: 260px;
          width: 100%;
          background: #CC0000;
          border: 1px solid #950000;
          box-sizing: border-box;
          box-shadow: inset 0px -2px 2px rgba(32, 32, 32, 0.33);
          border-radius: 4px;
          font-family: "Mulish";
          font-style: normal;
          font-weight: bold;
          font-size: 16px;
          line-height: 20px;
          text-align: center;
          color: #FFFFFF;
          text-shadow: 0px -1px 0px rgba(32, 32, 32, 0.33);
        }
      }
    }
    
    .desc {
      @media (max-width: 639px) {
        padding: 0 20px;
      }
      p {
        font-family: "Mulish";
        font-style: normal;
        font-weight: normal;
        font-size: 16px;
        line-height: 20px;
        color: #202020;
      }
    }
  }
}